<% if user_signed_in? %>
  <% if current_user.downvoted_post?(post) %>
    <%= form_with(model: current_user.downvotes.where(:post_id => post.id).first, method: :delete) do |f| %>
      <%= f.hidden_field :post_id, :value => post.id %>
      <%= f.submit '\/', class: 'page-link bg-danger text-white' %>
    <% end %>
  <% else %>
    <%= form_with(model: Downvote.new) do |f| %>
      <%= f.hidden_field :post_id, :value => post.id %>
      <%= f.submit '\/', class: 'page-link' %>
    <% end %>
  <% end %>
<% else %>
  <button type="button" class='page-link' disabled><%= inline_svg "downvote.svg", size: '16 * 16' %></button>
<% end %>