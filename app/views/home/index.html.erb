<div class="container">
  <h2 class="mt-4">Top Posts</h2>
  <hr>

  <% @posts.each do |post| %>
    <div class="card mb-3">
      <div class="card-body">
        <h4 class="card-title"><%= link_to "#{post.title}", sub_post_path(sub_id: post.sub, id: post), class: 'text-primary' %></h4>
        <h6 class="card-subtitle mb-2 text-muted">by <%= link_to "#{post.user.username}", user_path(post.user) %> in <%= link_to "#{post.sub.name}", sub_path(post.sub) %> at <%= post.created_at_formatted %></h6>
        <p class="card-text"><%= post.content.truncate(125) %></p>
      </div>
      <%= render 'layouts/vote_buttons', post: post %>
      <p class="mt-3 ml-3"><%= post.comments.count %> <%= inline_svg "comments.svg", size: "18px*18px" %></p>
    </div>
  <% end %>

</div>