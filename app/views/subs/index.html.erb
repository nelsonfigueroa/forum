<div class="container">

  <% if user_signed_in? %>
    <%= link_to 'Create a sub!', new_sub_path, :class => 'btn btn-primary' %>
  <% else %>
    <button type="button" class="btn btn-primary" disabled>Log in to create a sub</button>
  <% end %>

  <% unless @subs.empty? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% @subs.each do |sub| %>
          <p></p>
          <tr>
            <td><%= link_to "#{sub.name}", sub_path(sub) %></td>
            <td><%= sub.description %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>omg no subs</p>
  <% end %>
</div>