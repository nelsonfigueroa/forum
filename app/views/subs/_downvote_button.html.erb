<% if user_signed_in? %>
  <% if current_user.downvoted_post?(post) %>
    <%= form_for current_user.downvotes.where(:post_id => post.id).first, method: :delete do |f| %>
      <%= f.hidden_field :post_id, :value => post.id %>
      <%= f.submit '\/', class: 'page-link bg-danger text-white' %>
    <% end %>
  <% else %>
    <%= form_for Downvote.new do |f| %>
      <%= f.hidden_field :post_id, :value => post.id %>
      <%= f.submit '\/', class: 'page-link' %>
    <% end %>
  <% end %>
<% else %>
  <button type="button" class='page-link' disabled>\/</button>
<% end %>